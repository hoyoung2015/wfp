<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>

    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/shell/bin</directory>
            <outputDirectory>${project.package.dir}/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/shell/conf</directory>
            <outputDirectory>${project.package.dir}/conf/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>*.properties</include>
                <include>*.txt</include>
                <include>logback.xml</include>
            </includes>
            <outputDirectory>${project.package.dir}/java_conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/shell/lib</directory>
            <outputDirectory>${project.package.dir}/lib</outputDirectory>
        </fileSet>
        <!-- keep beidou-cron.jar without version in file name -->
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>${project.package.dir}.jar</include>
            </includes>
            <outputDirectory>${project.package.dir}/lib</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <scope>compile</scope>
            <outputDirectory>${project.package.dir}/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <scope>provided</scope>
            <outputDirectory>${project.package.dir}/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>